{
	"Name":"ProBuilder Unity 4.7",
	"UnityPath":[
		"/Applications/Unity 4.7/Unity.app",
		"D:/Applications/Unity 4.7"
	],
	"Macros": {
		"$SRC_PB_ROOT": "probuilder2.0/Assets/ProCore/ProBuilder",
		"$DST_PB_ROOT": "bin/projects/ProBuilder-Unity47/Assets/ProCore/ProBuilder",
	},
	"Defines": [
		"UNITY_4",
		"UNITY_4_7"
	],
	"OnPreBuild":[
		{ "Command":"rm", "Arguments": [ "bin/projects/ProBuilder-Unity47" ] },
		{ "Command":"mkdir", "Arguments": [ "bin/projects/ProBuilder-Unity47/Assets" ] },
		{ "Command":"cp", "Arguments": [ "$SRC_PB_ROOT", "$DST_PB_ROOT" ] },
		{ "Command":"rm", "Arguments": [ "$DST_PB_ROOT/Classes/ClassesCore" ] },
		{ "Command":"rm", "Arguments": [ "$DST_PB_ROOT/Classes/ClassesEditing" ] },
		{ "Command":"rm", "Arguments": [ "$DST_PB_ROOT/Editor/EditorCore" ] },
		{ "Command":"rm", "Arguments": [ "$DST_PB_ROOT/Classes/ClassesCore.meta" ] },
		{ "Command":"rm", "Arguments": [ "$DST_PB_ROOT/Classes/ClassesEditing.meta" ] },
		{ "Command":"rm", "Arguments": [ "$DST_PB_ROOT/Editor/EditorCore.meta" ] },
		{ "Command":"rm", "Arguments": [ "$DST_PB_ROOT/Data" ] },
		{ "Command":"rm", "Arguments": [ "$DST_PB_ROOT/Data.meta" ] },
		{ "Command":"cp", "Arguments": [ "$DST_PB_ROOT/Shader/DiffuseVertexColor.shader", "$DST_PB_ROOT/Shader/pb_StandardVertexColor.shader" ] },
		{ "Command":"cp", "Arguments": [ "$TARGET_DIR/resources/4.7/ProBuilderCore-Unity4.dll.meta", "$DST_PB_ROOT/Classes/ProBuilderCore-Unity4.dll.meta" ] },
		{ "Command":"cp", "Arguments": [ "$TARGET_DIR/resources/4.7/ProBuilderMeshOps-Unity4.dll.meta", "$DST_PB_ROOT/Classes/ProBuilderMeshOps-Unity4.dll.meta" ] },
		{ "Command":"cp", "Arguments": [ "$TARGET_DIR/resources/4.7/ProBuilderEditor-Unity4.dll.meta", "$DST_PB_ROOT/Editor/ProBuilderEditor-Unity4.dll.meta" ] },
		{ "Command":"cp", "Arguments": [ "$TARGET_DIR/resources/AssetStoreTools", "bin/projects/ProBuilder-Unity47/Assets/AssetStoreTools" ] },
	],
	"Assemblies":
	[
		{
			"SourceDirectory": "$SRC_PB_ROOT/Classes/ClassesCore",
			"OutputAssembly": "$DST_PB_ROOT/Classes/ProBuilderCore-Unity4.dll",
		},
		{
			"SourceDirectory": "$SRC_PB_ROOT/Classes/ClassesEditing",
			"OutputAssembly": "$DST_PB_ROOT/Classes/ProBuilderMeshOps-Unity4.dll",
			"ReferencedAssemblies": [
				"$DST_PB_ROOT/Classes/ProBuilderCore-Unity4.dll",
				"$SRC_PB_ROOT/Classes/ClassesLib/pb_Stl.dll",
				"$SRC_PB_ROOT/Classes/ClassesLib/Poly2Tri.dll",
				"$SRC_PB_ROOT/Classes/ClassesLib/KdTreeLib.dll"
			]
		},
		{
			"SourceDirectory": "$SRC_PB_ROOT/Editor/EditorCore",
			"OutputAssembly": "$DST_PB_ROOT/Editor/ProBuilderEditor-Unity4.dll",
			"Defines": [
				"UNITY_EDITOR"
			],
			"ReferencedAssemblies": [
				"UnityEditor.dll",
				"$DST_PB_ROOT/Classes/ProBuilderCore-Unity4.dll",
				"$DST_PB_ROOT/Classes/ProBuilderMeshOps-Unity4.dll",
				"$SRC_PB_ROOT/Classes/ClassesLib/pb_Stl.dll",
				"$SRC_PB_ROOT/Classes/ClassesLib/Poly2Tri.dll",
				"$SRC_PB_ROOT/Classes/ClassesLib/KdTreeLib.dll"
			]
		}
	]
}
