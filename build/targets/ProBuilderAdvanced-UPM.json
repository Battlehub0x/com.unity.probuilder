{
	"Name":"ProBuilder Unity Package Manager",
	"Base":"ProBuilderBase.json",
	"Macros": {
		"$SRC_PB_ROOT": "probuilder2.0/Assets/ProCore/ProBuilder",
		"$BUILD_DIR": "bin/projects",
		"$DST_PB_ROOT": "bin/projects/ProBuilderUPM-Unity2017.3/Assets/ProCore/ProBuilder",
		"$DST_PB_NAME": "ProBuilderUPM",
		"$UNITY_VERSION": "2017.3",
		"$UPM_PACKAGE_DIR": "../upm-package-probuilder-project/Packages/com.unity.probuilder"
	},
	"Defines": [
		"PROBUILDER_DLL",
		"PROBUILDER_UPM"
		"UNITY_5_OR_NEWER",
		"UNITY_5_3_OR_NEWER"
		"UNITY_5_5_OR_NEWER",
		"UNITY_5_6_OR_NEWER",
		"UNITY_2017_1_OR_NEWER",
		"UNITY_2017_2_OR_NEWER",
		"UNITY_2017_3_OR_NEWER",
		"UNITY_2017_3",
	],
	"OnPostBuild": [
		{ "Command":"rm", "Arguments": [ "$UPM_PACKAGE_DIR/ProCore" ] },
		{ "Command":"mkdir", "Arguments": [ "$UPM_PACKAGE_DIR/ProCore" ] },
		{ "Command":"cp", "Arguments": [ "$DST_PB_ROOT", "$UPM_PACKAGE_DIR/ProCore/ProBuilder" ] },
		{ "Command":"cp", "Arguments": [ "$DST_PB_ROOT/About/changelog.txt", "$UPM_PACKAGE_DIR/CHANGELOG.md" ] },
		{ "Command":"cp", "Arguments": [ "README.md", "$UPM_PACKAGE_DIR/README.md" ] },
		{ "Command":"rm", "Arguments": [ "$BUILD_DIR/$DST_PB_NAME-Unity$UNITY_VERSION" ] },
	]
}
